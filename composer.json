{
    "name": "gnbit/alabra-entity",
    "description": "entity class",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "DDD",
        "domain driven design",
        "clean architecture",
        "middleware",
        "entity"
    ],
    "authors": [
        {
            "name": "Benjam√≠n Gonzales",
            "email": "benjamin@gnbit.com",
            "homepage": "http://www.gnbit.com"
        }
    ],
    "homepage": "https://github.com/gnbitdev/alabra-entity",
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1 || ^8.2 || ^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "phpstan/phpstan": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "Alabra\\Entity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alabra\\EntityTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "phpstan analyze -l max -c ./phpstan.neon ./src",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v",
        "docker-enter": "./docker-enter.sh"
    }
}
