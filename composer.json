{
    "name": "gnbit/alabra-entity",
    "description": "entity",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Benjam√≠n Gonzales",
            "email": "benjamin@gnbit.com",
            "homepage": "http://www.gnbit.com"
        }
    ],
    "homepage": "https://github.com/gnbit/alabra-entity",
    "require": {
        "php": "^7 || ^8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "Alabra\\Entity\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Alabra\\EntityTest\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "phpstan analyze -l max -c ./phpstan.neon ./src/Mapper",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "upload-coverage": "coveralls -v"
    }
}
